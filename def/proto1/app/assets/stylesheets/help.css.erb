/* The help buttons - also see sprites.css.scss */
img.help {
  vertical-align: middle;
}

th > img.help {
  vertical-align: top;
}
h2 > img.help {
  vertical-align: baseline;
}

.fieldsTable tr th img.help {
  margin-top: 0 !important;
}

img.help:hover,
img.info_button:hover,
img.cet_action:hover
{
  cursor: pointer;
}
