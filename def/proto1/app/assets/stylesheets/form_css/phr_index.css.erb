  color: #666666;
  font-family: "Ubuntu",Arial;
  font-size: 14px;
  padding: 0 0 0 2px;
}

/* buttons */
#fe_saved_phrs_0_expcol button,
#fe_arch_profiles_0_expcol button{
  padding-right: 25px;
  margin-top: 1em;
  margin-left: 30%;
