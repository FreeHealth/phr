/* The main calendar widget.  DIV containing a table. */

.calendar {
  background: none repeat scroll 0 0 #FFFFFF;
  border: 1px solid #C1C1C1;
  color: #000;
  cursor: default;
  display: none;
  font-family: Arial;
  font-size: 12px;
  padding: 3px 2px;
  position: relative;
  z-index: 5;
}

.calendar table {
  border: 0;
  font-size: 12px;
  cursor: default;
  font-family: Arial;
}

/* Header part -- contains navigation buttons and day names. */

.calendar .button { /* "<<", "<", ">", ">>" buttons have this class */
  text-align: center;
  padding: 1px;
  border: 0;
  background: none;
}

.calendar .nav {
  background: ButtonFace url(<%= asset_path("menuarrow.gif") %>) no-repeat 100% 100%;
}

.calendar thead .title { /* This holds the current "month, year" */
  font-weight: bold;
  padding: 1px;
  border: none;
  background: ActiveCaption;
  color: CaptionText;
  text-align: center;
}

.calendar thead .headrow { /* Row <TR> containing navigation buttons */
  background: #efefef;
}
.calendar thead .headrow td {
  border: 0;
  border-bottom: 2px solid #fff;
  padding: 3px; 
}
.calendar thead .daynames { /* Row <TR> containing the day names */
}

.calendar thead .name { /* Cells <TD> containing the day names */
  background: none repeat scroll 0 0 transparent;
  border-bottom: 0 none;
  padding: 2px;
  text-align: center;
}

.calendar thead .weekend { /* How a weekend day name shows in header */
}

.calendar thead td.button.hilite { /* How do the buttons in header appear when hover */
  border: 1px solid #BFBFBF;
  padding: 2px 0 2px 0;
}

.calendar thead .active { /* Active (pressed) buttons in header */
  border-width: 1px;
  padding: 2px 0px 0px 2px;
  border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
}
.calendar thead tr:first-child td {
  background: none repeat scroll 0 0 #E8F0F7;
  border-bottom: 2px solid #FFFFFF;
  font-weight: bold;
  padding: 3px 0;
}
.calendar thead tr:first-child td:first-child div {
  background: none repeat scroll 0 0 #F4F8FB;
  border-radius: 10px 10px 10px 10px;
  color: #1878AC;
  margin: 0 auto;
  text-align: center;
  width: 15px;
}
.calendar thead tr:first-child td:last-child  div {
  content: "X";
  color: #660000;
  text-transform: uppercase;
}

/* The body part -- contains all the days in month. */

.calendar tbody .day { /* Cells <TD> containing month days dates */
  width: 2em;
  text-align: right;
  padding: 2px 4px 2px 2px;
}
.calendar tbody .day.othermonth {
  color: #aaa;
}
.calendar tbody .day.othermonth.oweekend {
}

.calendar table .wn {
  background: none repeat scroll 0 0 #EFEFEF;
  border-right: 0 none;
  color: #000000;
  padding: 2px 3px 2px 2px;
  text-align: center;
}

.calendar tbody td.hilite { /* Hovered cells <TD> */
 /* padding: 1px 3px 1px 1px; */
 /* border: 1px solid #1D64B3;*/
  background: none repeat scroll 0 0 #DFE9F4;
}

.calendar tbody td.active { /* Active (pressed) cells <TD> */
  padding: 2px 2px 0px 2px;
  border: 1px solid;
  border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
}

.calendar tbody td.weekend { /* Cells showing weekend days */

}
.calendar tbody td.selected {/* Cell showing selected date */
  background: none repeat scroll 0 0 #DFE9F4;
  border: 1px solid #1D64B3;
  color: #457FC0;
  font-weight: normal;
}

.calendar tbody td.today { /* Cell showing today date */
  background: none repeat scroll 0 0 #DFE9F4;
  color: #457FC0;
  font-weight: normal;
}

.calendar tbody td.disabled { color: GrayText; }

.calendar tbody .emptycell { /* Empty cells (the best is to hide them) */
  visibility: hidden;
}

.calendar tbody .emptyrow { /* Empty row (some months need less than 6 rows) */
  display: none;
}

/* The footer part -- status bar and "Close" button */

.calendar tfoot .footrow { /* The <TR> in footer (only one right now) */
}
.calendar tfoot .footrow td {
  background: #efefef;
  border-top: 2px solid #fff;
  padding: 3px 0;
}
.calendar tfoot .ttip { /* Tooltip (status bar) cell <TD> */
  background: ButtonFace;
  padding: 1px;
  border: 0;
  color: ButtonText;
  text-align: center;
}

.calendar tfoot .hilite { /* Hover style for buttons in footer */
  border-top: 1px solid #fff;
  border-right: 1px solid #000;
  border-bottom: 1px solid #000;
  border-left: 1px solid #fff;
  padding: 1px;
  background: #e4e0d8;
}

.calendar tfoot .active { /* Active (pressed) style for buttons in footer */
  padding: 2px 0px 0px 2px;
  border-top: 1px solid #000;
  border-right: 1px solid #fff;
  border-bottom: 1px solid #fff;
  border-left: 1px solid #000;
}

/* Combo boxes (menus that display months/years for direct selection) */

.calendar .combo {
  position: absolute;
  display: none;
  width: 4em;
  top: 0px;
  left: 0px;
  cursor: default;
  border: 1px solid;
  border-color: ButtonHighlight ButtonShadow ButtonShadow ButtonHighlight;
  background: Menu;
  color: MenuText;
  font-size: 90%;
  padding: 1px;
  z-index: 100;
}

.calendar .combo .label,
.calendar .combo .label-IEfix {
  text-align: center;
  padding: 1px;
}

.calendar .combo .label-IEfix {
  width: 4em;
}

.calendar .combo .active {
  padding: 0px;
  border: 1px solid #000;
}

.calendar .combo .hilite {
  background: Highlight;
  color: HighlightText;
}

.calendar td.time {
  border-top: 1px solid ButtonShadow;
  padding: 1px 0px;
  text-align: center;
  background-color: ButtonFace;
}

.calendar td.time .hour,
.calendar td.time .minute,
.calendar td.time .ampm {
  padding: 0px 3px 0px 4px;
  border: 1px solid #889;
  font-weight: bold;
  background-color: Menu;
}

.calendar td.time .ampm {
  text-align: center;
}

.calendar td.time .colon {
  padding: 0px 2px 0px 3px;
  font-weight: bold;
}

.calendar td.time span.hilite {
  border-color: #000;
  background-color: Highlight;
  color: HighlightText;
}

.calendar td.time span.active {
  border-color: #f00;
  background-color: #000;
  color: #0f0;
}
