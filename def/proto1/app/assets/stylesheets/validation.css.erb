/* Validation tooltip style sheet (see validation.js) */

.errMsgInParen{
  font-size:smaller;
  font-weight: lighter;
}

/* A link used to close the floating div of required field validation error messages */
.closingLink{
  font-weight: normal;
  text-align:right;
}

/* jQuery tooltip css */
.ui-tooltip {
  background:#FFFFCC;
  font-weight: bold;
  font-size: smaller;
  border-color: #EAC117;
  line-height: 20px;
  box-shadow: 0 0 7px #EAC117;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.ui-tooltip, .arrow:after {
  background: #FFFFCC;
  border: 2px solid orange;
}

.arrow {
  width: 70px;
  height: 16px;
  overflow: hidden;
  position: absolute;
  left: 50%;
  margin-left: -35px;
  bottom: -16px;
}

.arrow.top {
  top: -16px;
  bottom: auto;
}

.arrow.left {
  left: 10%;
}

.arrow:after {
  content: "";
  position: absolute;
  left: 20px;
  top: -20px;
  width: 25px;
  height: 25px;
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  tranform: rotate(45deg);
}

.arrow.top:after {
  bottom: -20px;
  top: auto;
}

/* password format requirement tooltip */
/* un-satisfied password criteria */
.invalid_pwd {
  background: url(<%= asset_path("invalid.png") %>) no-repeat 0 50%;
  padding-left: 22px;
  line-height: 24px;
  color: #ec3f41;
}

/* satisfied password criteria */
.valid_pwd {
  background: url(<%= asset_path("valid.png") %>) no-repeat 0 50%;
  padding-left: 22px;
  line-height: 24px;
  color: #3a7d34;
}

/* header of password criteria section */
#pswd_info h4 {
  margin: 0 0 10px 0;
  padding: 0;
  font-weight: normal;
}
