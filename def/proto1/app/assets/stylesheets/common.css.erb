/* Styles for use by all pages, whether generated by the framework or not. */

/* Notification/Error background image styles need to appear before global 
   background-clip styles 
 */

 
/* Red */
#page_errors, 
.errReqDiv, 
#error {
  background-image: linear-gradient(to right, #A30F0F 0px, #A30F0F 16px, rgba(255,255,255,0) 16px), linear-gradient(#FAE5E4 0%, #FFF 100%);
  color: #a30f0d;
  background-clip: padding-box;
  background-color: #FFFFFF;
  border: 7px solid rgba(0, 0, 0, 0.03);
  border-radius: 5px 5px 5px 5px;
  box-shadow: 0 0 0 1px #FFFFFF inset;
  font-size: 15px;
  font-weight: bold;
  margin: 0 auto;
  padding: 11px 7px 11px 25px;
  text-align: left;
  width: 929px;  /* fixed width?? it does not look good on popup windows --ye 2/10*/
}


/* Green */ /* Overwrite the Red ones color */
#login_page_notice, 
#urgent_notice, 
#notification,
#saved_notice,
.field .notification{
  background-image: linear-gradient(to right, #127B00 0px, #127B00 16px, rgba(255,255,255,0) 16px), linear-gradient(#E2EFD9 0%, #FFF 100%);
  color: #39762e;
  background-clip: padding-box;
  background-color: #FFFFFF;
  border: 7px solid rgba(0, 0, 0, 0.03);
  border-radius: 5px 5px 5px 5px;
  box-shadow: 0 0 0 1px #FFFFFF inset;
  font-size: 15px;
  font-weight: bold;
  margin: 0 auto;
  padding: 11px 7px 11px 25px;
  text-align: left;
  width: 929px;  /* fixed width?? it does not look good on popup windows --ye 2/10*/
}


/* floating div containing required field validation error messages*/
.errReqDiv {
  position: fixed; 
  left: -28px; 
  top: 36px;
  width: 98%;
  z-index: 125;
}


.initially_not_displayed,
.hidden_field {
  display: none ;
}

.initially_hidden {
  visibility: hidden;
}

label {
  width: 24em;
}

/* For checkbox labels, turn off other label styles */
div.field label.checkbox {
  width: auto;
  float: none;
  font-weight: normal;
}

/* fix for IE */
input[type='checkbox'] {
  background-color: transparent;
  padding: 0;
  border: 0;
}

/* common images */
.ascend_arrow {
  background: url(<%= asset_path("up.png") %>) no-repeat scroll 100% 100%;
  height: 10px;
}

.descend_arrow {
  background: url(<%= asset_path("down.png") %>) no-repeat scroll 100% 100%;
  height: 10px;
}
