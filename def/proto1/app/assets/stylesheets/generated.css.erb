/***  Formatting for general field groups ***/

/* Field groups can be horizontal or vertical.  See the horizontalFieldGroup.css
   file for css specific to that type of field group.  Styles common to all
   field groups are here.
 */
.fieldGroup {
  border-top: 0 solid #73a0c8;
  border-bottom: 0 solid #73a0c8;
  border-left: 0 solid #73a0c8;
  border-right: 0 solid #73a0c8;
/* it needs to static for the answer list within a subgroup to position itself correctly. 6/7/2012, Ye */
/*  position: relative; */
  margin: 30px 0;
}


.embeddedRow .fieldGroup {
  /*padding-top: 8px;8/
  /*margin: 0 16px 8px 20px;*/
  margin: 0;
}


.fieldGroup .fieldGroup {
  margin-bottom: 0;
}

.fieldGroup .fieldGroup:first-child {
  margin-top: 0;
}

.groupHeader {
  background-color: #458AC5 !important;
  border: 1px solid #DBDBDB;
  border-bottom: none;
  border-left: none;
  border-right: none;
  clear: both;
  color: #FFF;
  font-family: "Ubuntu",Arial;
  font-size: 21px;
  overflow: hidden;
/*    width: 99.8%; */ /* why 99.8%? --ye */
  padding: 7px 0 7px 0px;
}

/* Usually contains the top bar of the group, which includes the title and
   often other elements.
 */
.groupHeader span {
  font-weight: normal;
  padding-left: 10px;
}

/* contains the hide/show button, sometimes other info */
.groupHeader div.hide_show_button {
  position: relative;
  font-size: 15px;
  font-weight: normal;
} 

/* Embedded groups */
h3.groupHeader {
  padding-bottom: 3px;
  padding-top: 3px;
  margin-bottom: 20px;
}

/* hide & show links in group headers - used to expand/collapse the group */
div.hide_show_button {
  float: right;
  cursor: pointer;
}
div.hide_show_button img {
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 15px;
}
div.hide_show_button:hover img {
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 15px;
}

.fieldExpColDiv {
  background-color: none;
  clear: both;
  margin: 0;
  padding: 0px;
