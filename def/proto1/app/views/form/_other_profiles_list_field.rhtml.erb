<% # Template for new PHR Home page other profiles listings section %>

<div id="otherTopSection">
 
  <table id="other_profiles_list">

   <tr id="other_profile_list_header_row">
   <th> </th>
   <th> </th>
   <th>Person</th>
   <th class="updated_header">Updated</th>
   <th></th>
   <th>Notifications</th>
   <th></th>
   <th></th>
   <th id="owner_col_hdr">PHR Owner</th>
   </tr>

    <% if !@other_profiles.nil? %>
      <% row = 0 %>
      <% @other_profiles.each do |profile| %>

        <% row += 1 %>
        <% row_s = row.to_s %>
        <% @other_profile_ids_shown[profile.id_shown] = row %>

          <%= render({:partial =>'form/other_profile_listing.rhtml',
                      :handlers =>[:erb],
                      :locals=>{:row_s=>row_s, :profile=>profile}}).html_safe %>

      <% end %> <!-- end other_profiles.each -->
    <% end %> <!-- end if !@other_profiles.nil? -->
  </table>

</div> <!-- otherTopSection -->
