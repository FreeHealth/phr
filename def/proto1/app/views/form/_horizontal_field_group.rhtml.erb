<table cellpadding=0 cellspacing=0 class="<%=table_class%>"
 id="<%=table_id%>" suffix="<%=fd_suffix%>"
 nextid="2">
  <% # we would iterate below on widths, but there is a bug that currently
     # causes widths to contain entries for embedded rows.  TBD %>
  <% fields_headers.each_with_index do |h,i| %>
    <col style="<% if hidden_cols[i] %>width: 0; display: none;<%
       else %>width: <%=widths[i]%>;<%if !min_widths[i].blank?
       %> min-width: <%=min_widths[i]%>;<%end end%>">
  <% end %>
  <thead>
    <tr>
      <% fields_headers.each do |th| %>
      <%= th %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= model_row %>
    <%= first_row %>
  </tbody>
</table>
