<div ><%=fd_labeled_text_value @fds['name_and_route'], @phr_drug %>
  <% if @phr_drug.new_record? %>
      <%= phr_hidden_field @phr_drug, 'name_and_route' %>
      <% if !@phr_drug.name_and_route_C.blank? %>
          <%= phr_hidden_field @phr_drug, 'name_and_route_C' %>
      <% end %>
  <% end %>
