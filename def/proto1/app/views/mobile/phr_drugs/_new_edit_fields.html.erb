<%=fd_text_field_mb @fds['instructions'], @phr_drug %>
<%=fd_date_field_mb @fds['drug_start'], @phr_drug %>
<%=fd_date_field_mb @fds['stopped_date'], @phr_drug %>
<%=fd_prefetched_list_mb @fds['why_stopped'], @phr_drug, @reasons %>
